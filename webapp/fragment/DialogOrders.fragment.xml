<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Dialog title="{i18n>TitleOrdersDetail}">
        <Table items="{Employee>Orders}" width="700px">
            <columns>
                <Column>
                    <header>
                        <Label text="{i18n>orderId}" />
                    </header>
                </Column>
                <Column>
                    <header>
                        <Label text="{i18n>freight}" />
                    </header>
                </Column>
                <Column>
                    <header>
                        <Label text="{i18n>shipAddress}" />
                    </header>
                </Column>
            </columns>
            <items>
            <ColumnListItem >
                <cells>
                    <Label text="{Employee>OrderID}" />
                    <Label text="{Employee>Freight}" />
                    <Label text="{Employee>ShipAddress}" />
                </cells>
            </ColumnListItem>
            </items>
        </Table>
        <endButton>
            <Button text="{i18n>CloseBt}" press="onCloseOrders"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
