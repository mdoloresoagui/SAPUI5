<mvc:View
    controllerName="logaligroup.employees.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
    xmlns:core="sap.ui.core" displayBlock="true">
    <Page title="{i18n>employeeDetails}">
        <Panel>
            <FlexBox id="TitleName" height="65px" alignItems="Center" justifyContent="Center">
                <items>
                     <Text text="{Employee>LastName}, {Employee>FirstName}" class="boldText" />
                </items>
            </FlexBox>
            <FlexBox id="EmplIdText" height="65px" alignItems="Start" justifyContent="SpaceBetween">
                <items>
                     <VBox id="SecEmplID" >
                        <Text text="{i18n>LbEmplIdTb}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{Employee>EmployeeID}"/>
                     </VBox>
                    <VBox id="SecTitle" >
                        <Text text="{i18n>LbTitleEmpl}" class="boldText"/>
                        <Text text="{Employee>Title}"/>
                    </VBox>
                </items>
            </FlexBox>
            <FlexBox alignItems="Start">
                <items>
                    <HBox id="SecCountry">
                        <Text text="{i18n>LbCountryTb}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{Employee>Country}"/>
                        <layoutData>
                            <FlexItemData growFactor="3"/>
                        </layoutData>
                    </HBox>
                    <HBox id="SecCity">
                        <Text text="{i18n>LbCityTb}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{Employee>City}"/>
                        <layoutData>
                            <FlexItemData growFactor="2"/>
                        </layoutData>
                    </HBox>
                    <FlexBox id="SecPostalCode" direction="Row" alignItems="Start">
                        <Text text="{i18n>LbPostalCode}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{Employee>PostalCode}"/>
                        <layoutData>
                            <FlexItemData growFactor="1"/>
                        </layoutData>
                    </FlexBox>
                </items>
            </FlexBox>
        </Panel>
        <Panel class="sapUiSizeCompact" backgroundDesign="Transparent">
            <headerToolbar>
                <Toolbar>
                    <Title text="{i18n>TextIncident} {= ${Employee>Country} !== 'US' ? ${i18n>europe} : ${i18n>us}} "/>
                    <ToolbarSpacer />
                    <Button text="{i18n>BtnCreateInci}" press="onCreateInci"/>
                </Toolbar>
            </headerToolbar>
            <Panel id="tableInci" class="sapUiNoContentPadding" backgroundDesign="Transparent"></Panel>
        </Panel>
    </Page>
</mvc:View>
