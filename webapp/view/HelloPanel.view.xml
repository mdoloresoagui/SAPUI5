<mvc:View
    controllerName="logaligroup.sapui5.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Panel headerText="{i18n>TitlePanel}"
           class="sapUiResponsiveMargin"
           width="auto" expandable="{device>/system/phone}" 
           expanded="{= !${device>/system/phone} }" accessibleRole="Region">
        <content>
            <Button
                id="BHelloDialog"
                icon="sap-icon://action"
                text="{i18n>HelloButtDialog}"
                press=".onOpenDialog"
                class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop"/>
            <Button
                text="{i18n>ButtonHello}"
                press=".onShowHello"
                class="sapUiSmallMarginEnd sapUiHideOnDesktop"/>
            <Input
                value="{/recipient/name}"
                valueLiveUpdate="true"
                width="60%"/>
            <Text text="Hello {/recipient/name}"
                  class="sapUiSmallMargin boldElements"/>
        </content>
    </Panel>
    <core:Fragment
        fragmentName="logaligroup.sapui5.view.Form01"
        type="XML"/>
</mvc:View>
