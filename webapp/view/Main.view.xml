<mvc:View
    controllerName="logaligroup.employees.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    displayBlock="true">
    <Shell>
        <App id="app">
            <pages>
                <Page showHeader="false">
                    <content>
                        <f:FlexibleColumnLayout id="fcl" backgroundDesign="Solid" layout="{Layouts>/ActiveKey}">
                            <f:beginColumnPages>
                                <mvc:XMLView id="masterEmpView" viewName="logaligroup.employees.view.MasterEmployee"/>
                            </f:beginColumnPages>
                            <f:midColumnPages>
                                <mvc:XMLView id="detailEmpView" viewName="logaligroup.employees.view.EmployeeDetails"/>
                            </f:midColumnPages>
                            <f:endColumnPages>
                                <Page>
                                </Page>
                            </f:endColumnPages>
                        </f:FlexibleColumnLayout>
                    </content>
                    <footer>
                        <Toolbar>
                            <Label text="{i18n>layout}" class="sapUiSmallMargin"/>
                            <Select items="{Layouts>/Layout}" selectedKey="{Layouts>/ActiveKey}">
                                <core:Item key="{Layouts>Key}" text="{Layouts>Text}"/>
                            </Select>
                        </Toolbar>
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
