<mvc:View controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Shell>
    <App id="app">
        <Page id="App" title="{i18n>title}">
            <content>
                <HBox >
                    <Label id="LbEmpl" text="{i18n>LbTxtEmp}" class="sapUiSmallMargin" labelFor="InputEmpl"/>
                    <Input id="InputEmpl" maxLength="6" width="200px" class="sapUiSmallMarginEnd" liveChange="onLiveChangeEmpl"/>
                    <Label id="LbCountry" text="{i18n>LbTxtCountry}" class="sapUiSmallMargin" labelFor="slCountry" visible="false"/>
                    <Select id="slCountry" forceSelection="false" visible="false">
                        <items>
                            <core:Item key="US" text="{i18n>ItemUSText}"/>
                            <core:Item key="UK" text="{i18n>ItemUKText}"/>
                            <core:Item key="SP" text="{i18n>ItemSPText}"/>
                        </items>
                    </Select>
                </HBox>
         </content>
        </Page>
    </App>
    </Shell>
</mvc:View>