<mvc:View controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Shell>
    <App id="app">
        <Page id="App" title="{i18n>title}">
            <content>
                <HBox >
                    <Label id="LbEmpl" text="{i18n>LbTxtEmp}" class="sapUiSmallMargin" labelFor="InputEmpl"/>
                    <Input id="InputEmpl" value="{/EmployeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd"/>
                    <Label id="LbCountry" text="{i18n>LbTxtCountry}" class="sapUiSmallMargin" labelFor="slCountry" visible="true"/>
                    <Select id="slCountry" selectedKey="{/CountryKey}" items="{/ListCountry}" forceSelection="false" visible="true">
                        <items>
                            <core:Item key="{Key}" text="{Text}"/>
                        </items>
                    </Select>
                    <Button id="BtnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"/>
                    <Button id="BtnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
                </HBox>
                <HBox >
                    <Panel>
                        <Table id="tbEmpl" items="{/Employees}" >
                            <columns>
                                <Column >
                                    <header>
                                        <Label text="{i18n>LbEmplIdTb}"/>
                                    </header>
                                </Column>
                                 <Column >
                                    <header>
                                        <Label text="{i18n>LbEmplNameTb}"/>
                                    </header>
                                </Column>
                                 <Column >
                                    <header>
                                        <Label text="{i18n>LbCountryTb}"/>
                                    </header>
                                </Column>
                                 <Column >
                                    <header>
                                        <Label text="{i18n>LbCityTb}"/>
                                    </header>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem type="Active" press="showPostalCode" >
                                    <cells>
                                        <Label text="{EmployeeID}" />
                                        <Label text="{LastName}, {FirstName}"/>
                                        <Label text="{Country}" />
                                        <Label text="{City}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </Panel>
                </HBox>
         </content>
        </Page>
    </App>
    </Shell>
</mvc:View>